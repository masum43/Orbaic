<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMininigStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:cardBackgroundColor="@color/green_pastel"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/circularImageTeam"
        app:layout_constraintTop_toTopOf="@+id/circularImageTeam"
        android:layout_marginTop="-5dp"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageTeam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:src="@drawable/demo_avatar"
        app:civ_border="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/circularImageTeam"
        tools:text="user name" />

</androidx.constraintlayout.widget.ConstraintLayout>