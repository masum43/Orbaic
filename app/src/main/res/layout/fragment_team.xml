<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#364156">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_background_shape">
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textColor="#fff"
                android:lineSpacingExtra="-6sp"
                android:letterSpacing="0.04"
                android:textSize="15sp"
                android:text="Referral Team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:visibility="gone"
                android:drawablePadding="7dp"
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@drawable/button_shape"
                android:text="Share"
                app:drawableStartCompat="@drawable/share_icon_2" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/team_gift_image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTeamMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Team (0)"
                android:textSize="16sp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="-5sp"
                android:textColor="#fff"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/viewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All >>"
                android:textSize="14sp"
                android:textColor="#64D2FF"
                android:letterSpacing="0.01"
                android:lineHeight="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            tools:listitem="@layout/grid_single_view"
            tools:itemCount="2"
            android:orientation="horizontal" />
            <TextView
                android:visibility="gone"
                android:lineSpacingExtra="-5sp"
                android:letterSpacing="0.01"
                android:textSize="15.25sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="&amp; 48 others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="1dp"
            android:background="#66FFFFFF"/>
        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:lineHeight="17sp"
                android:lineSpacingExtra="-6sp"
                android:letterSpacing="0.04"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Total Team Earn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"/>
            <ImageView
                android:layout_marginEnd="3dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/coins"/>

            <TextView
                android:id="@+id/tvTotalPoint"
                android:lineHeight="12sp"
                android:lineSpacingExtra="-12sp"
                android:letterSpacing="0.03"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:text="1205.00 ACI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallet_background_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral Code"
                android:textColor="#fff"
                android:textSize="15sp"
                android:letterSpacing="0.04"
                />

            <View android:layout_height="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_marginEnd="7dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/refferal_code_icon"/>
            <TextView
                android:id="@+id/tvMyReferCode"
                android:layout_marginEnd="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                tools:text="14342952"
                android:textSize="16.16sp"
                android:letterSpacing="0.03"/>
            <TextView
                android:id="@+id/tvCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="copy"
                android:gravity="center"
                android:textColor="#80ffffff"
                android:textSize="12sp"
                android:drawableEnd="@drawable/copy_icon"/>

        </LinearLayout>
        <View
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#66FFFFFF"/>

        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/email_edittext_background"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/refferal_code_icon"/>
                <EditText
                    android:id="@+id/etReferByCode"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvSubmit"
                    android:background="@drawable/button_shape"
                    android:text="Submit"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_width="90dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>
</androidx.core.widget.NestedScrollView>