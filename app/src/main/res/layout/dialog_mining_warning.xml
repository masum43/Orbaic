<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/extra_25_dialog_shape"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_alert"/>
    <TextView
        android:layout_gravity="center"
        android:lineSpacingExtra="-4sp"
        android:letterSpacing="0.01"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are currently mining and it will run for a full 24 hours from the start. So, please try again after the mining is finished."
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok, got it"
            android:textAllCaps="false"
            android:backgroundTint="@color/background_dark"
            android:padding="10dp"
            android:textSize="15sp"
            android:letterSpacing="0.05"
            android:textColor="#fff"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>