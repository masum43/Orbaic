<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#364156"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="15dp"
    android:background="@drawable/wallet_background_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACI Token"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/logo_transparent"/>
        <TextView
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="ACI 500"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming soon"
            android:textSize="14sp"
            android:textColor="#777"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:drawableStart="@drawable/wallet_transfer_icon"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_shape"
            android:text="Transfer"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <TextView
            android:gravity="center"
            android:layout_marginEnd="6dp"
            android:drawableStart="@drawable/wallet_withdraw_icon"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_shape"
            android:text="Withdraw"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <TextView
            android:gravity="center"
            android:drawableStart="@drawable/wallet_stacking_icon"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangular_shape"
            android:text="Stacking"
            android:textColor="#fff"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/wallet_background_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Token"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textColor="#fff"/>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/wallet_reward_token_shib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="10dp"
                    android:text="SHIB 200"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                />
             <TextView
                 android:layout_marginHorizontal="10dp"
                 android:textColor="#fff"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="$2.00"/>

            <TextView
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:drawableStart="@drawable/wallet_withdraw_icon"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_shape"
                android:text="Withdraw"
                android:textColor="#fff"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/wallet_reward_token_bnb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:text="BNB 500"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                />
            <TextView
                android:layout_marginHorizontal="10dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.50"/>

            <TextView
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:drawableStart="@drawable/wallet_withdraw_icon"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_shape"
                android:text="Withdraw"
                android:textColor="#fff"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/wallet_reward_token_tlc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:text="TLC 350"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                />
            <TextView
                android:layout_marginHorizontal="10dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1.00"/>

            <TextView
                android:gravity="center"
                android:layout_marginEnd="6dp"
                android:drawableStart="@drawable/wallet_withdraw_icon"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangular_shape"
                android:text="Withdraw"
                android:textColor="#fff"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginEnd="10dp"
            android:background="@drawable/wallet_background_shape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quiz Summary"
                android:textColor="#fff"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/CircularDeterminateProgressBar"
                android:layout_marginBottom="10dp"
                android:id="@+id/quizProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="15"
                tools:progress="15"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50/300"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:background="@drawable/wallet_background_shape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mining Hours"
                android:textColor="#fff"
                android:layout_gravity="center"/>
            <ProgressBar
                style="@style/CircularDeterminateProgressBar"
                tools:progress="70"
                android:progress="70"
                android:id="@+id/miningProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500/720"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/background"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner Status"
            android:textColor="#fff"/>
        <LinearLayout
            android:id="@+id/winnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_margin="15dp"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:src="@drawable/winner_image"
                app:civ_border="false" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="15dp">
                <TextView
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textColor="#fff"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#555"/>
                <TextView
                    android:layout_marginTop="3dp"
                    android:drawablePadding="5dp"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:text="Total Score Quiz: 288/300"
                    android:drawableStart="@drawable/quiz_score_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Total Mining Hrs: 700/720"
                    android:drawablePadding="5dp"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:drawableStart="@drawable/total_mining_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>