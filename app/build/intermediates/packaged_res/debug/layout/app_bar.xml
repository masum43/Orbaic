<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/status_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hamBurgMenuId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="15dp"
            android:src="@drawable/ham_burger_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_toolbar_logo" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_toolbar_name" />


        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/notification_icon" />

        <TextView
            android:id="@+id/textOne"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/notification_circle"
            android:gravity="center"
            android:text="9+"
            android:textColor="#FFF"
            android:textSize="8sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="25dp"
            android:layout_height="1dp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:src="@drawable/demo_avatar"
            app:civ_border="false" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#364156"
        />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:itemTextColor="#777"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>

